<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/WishListMainLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:background="@drawable/pinkbox_shape"
    android:layout_margin="15dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/WishProductIV"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/single_product" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal_spacing">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WishProductNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ordinary Niacinamide"
                android:textColor="@color/Light_pinK"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/WishListRemoveIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/grey" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WishOldPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/strike"
                android:maxLines="2"
                android:text="Rs. 1700"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView

                android:id="@+id/WishDiscountPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Rs 1500"
                android:textColor="@color/Light_pinK"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/WishlistCartLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                app:tint="@color/Light_pinK" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>