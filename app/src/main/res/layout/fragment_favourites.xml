<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productCartLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/box"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Sold By: XYZ"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/cartProductIV"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/cartProductDescTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Bomber jacket in woven fabric with a ribbed stand-up collar. "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cartProductPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 5000"
            android:textColor="@color/ttcolor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

<!--        <LinearLayout-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/button_background">-->
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="MOVE TO CART"-->
<!--                android:textColor="@color/black"-->
<!--                android:gravity="center"-->
<!--                />-->

<!--        </LinearLayout>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move To Cart"
            android:textColor="@color/white"
            android:backgroundTint="@color/ttcolor"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:paddingRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/ttcolor" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
