<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/mainLL">

    <ImageView
        android:id="@+id/productIV"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BomberJacket"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="28dp"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_heart"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/discountPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 5000"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="@color/ttcolor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oldPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 6000"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:foreground="@drawable/strike"
            />
        <TextView
            android:id="@+id/discountPercentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:textColor="@color/redColor"
            />


    </LinearLayout>




</LinearLayout>